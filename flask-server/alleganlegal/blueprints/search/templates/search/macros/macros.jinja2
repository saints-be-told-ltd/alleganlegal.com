{%- macro listing_row(organization) -%}
    <div class="row" style="padding-bottom: 20px">
        <div class="col-sm-2">
            <img src="{{ url_for('static', filename='images/organizations/{}.png'.format(organization.id)) }}" class="img-responsive img-circle">
        </div>
        <div class="col-sm-10 row">
            <div class="container">
                {# Organization title #}
                <div class="col-sm-6">
                    {{ organization.title }}
                </div>

                {# Click-to-call #}
                <div class="col-sm-6">{{ organization.click_to_call_button }}</div>
            </div>
        </div>
    </div>
{%- endmacro -%}
